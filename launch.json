    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current File",
            "program": "${file}",
            "outFiles": ["${workspaceFolder}/**/*.js"], 
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            //"preLaunchTask": "tsc",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["--timeout", "1000000",  "--exit"],
            "cwd": "${workspaceRoot}",
            "outFiles": [],
            "console": "integratedTerminal"
        }
    ]
}